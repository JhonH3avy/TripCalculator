    "version": "0.2.0",
    "configurations": [
      {
        "type": "firefox",
        "request": "attach",
        "name": "Attach to localhost",
        "url": "http://localhost/4200",
        "port": 4200,
        "webRoot": "${workspaceFolder}"
      },
      {
          "name": "Launch localhost",
          "type": "firefox",
          "request": "launch",
          "reAttach": true,
          "url": "http://localhost:4200",
          "webRoot": "${workspaceFolder}",
      }
    ]
}
